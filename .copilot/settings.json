{
  "copilot": {
    "enabled": true,
    "suggestions": {
      "enabled": true,
      "inline": true,
      "completions": true
    },
    "chat": {
      "enabled": true,
      "context": "project"
    },
    "rules": {
      "python": {
        "style": "black",
        "docstrings": "google",
        "type_hints": true
      },
      "javascript": {
        "style": "prettier",
        "comments": "jsdoc"
      },
      "markdown": {
        "style": "standard"
      }
    },
    "exclude": [
      "**/node_modules/**",
      "**/venv/**",
      "**/__pycache__/**",
      "**/.git/**",
      "**/dist/**",
      "**/build/**",
      "**/*.pyc",
      "**/.pytest_cache/**"
    ],
    "context": {
      "project_type": "python",
      "framework": "fastapi",
      "ai_safety": true,
      "guardrails": true
    }
  },
  "editor": {
    "formatOnSave": true,
    "formatOnPaste": true,
    "tabSize": 4,
    "insertSpaces": true,
    "rulers": [88],
    "wordWrap": "bounded"
  },
  "python": {
    "defaultInterpreterPath": "./venv/bin/python",
    "linting": {
      "enabled": true,
      "pylintEnabled": false,
      "flake8Enabled": true,
      "mypyEnabled": true
    },
    "formatting": {
      "provider": "black",
      "args": ["--line-length", "88"]
    }
  },
  "files": {
    "associations": {
      "*.yaml": "yaml",
      "*.yml": "yaml",
      "*.json": "json",
      "*.md": "markdown"
    }
  }
} 